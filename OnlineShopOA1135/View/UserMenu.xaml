<Window x:Class="OnlineShopOA1135.View.UserMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OnlineShopOA1135.View"
        mc:Ignorable="d"
        Title="UserMenu" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ListBox Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="4" Grid.RowSpan="6">
            
        </ListBox>
        <Label Content="logo" FontSize="33"/>
        <Button Content="home" Grid.Row="1" Background="White"/>
        <Button Content="ctgr" Grid.Row="2" Background="White"/>

        <TextBox Grid.Column="1" Grid.ColumnSpan="3" />
        <Button Content="Поиск" Grid.Column="4" Background="White"/>
        <Button Content="prfl" Grid.Row="1" Grid.Column="5" Background="White"/>
        <Button  Grid.Column="5" Background="White" Command="{Binding BasketWinOpen}">
            <StackPanel>
                <TextBlock Text="Корзина"/>
                <TextBlock Text="{Binding CountProduct}"/>
            </StackPanel>
        </Button>
        
    </Grid>
</Window>
