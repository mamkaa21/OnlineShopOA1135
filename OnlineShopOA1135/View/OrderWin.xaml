<Window x:Class="OnlineShopOA1135.View.OrderWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OnlineShopOA1135.View"
        xmlns:m="clr-namespace:OnlineShopOA1135.Model"
        xmlns:vm="clr-namespace:OnlineShopOA1135.ViewModel"      
            xmlns:i="http://schemas.microsoft.com/xaml/behaviors"

    mc:Ignorable="d"
      DataContext="{DynamicResource vm}"
Title="OrderWin" Height="450" Width="800">
    <Window.Resources>
        <vm:OrderWinVM x:Key ="vm"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <Label Content=" Logo" FontSize="30"/>
        <!--<Button Content="home" Grid.Column="1" Background="White" Command="{Binding AdminWinOpen}"/>-->
        <Button Content="prfl" Grid.Column="4" Background="White" Command="{Binding UserWinOpen}"/>

        <TabControl Grid.Row="1" Grid.ColumnSpan="5" Grid.RowSpan="5">
            <TabItem  Header="активные">
                <ListBox  ScrollViewer.VerticalScrollBarVisibility="Visible" ItemsSource="{Binding CrossListActive}" SelectedItem="{Binding CrossActive}"                        >
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseDoubleClick">
                            <i:InvokeCommandAction Command="{Binding DoubleClickCommand}"
                            CommandParameter="{Binding ElementName=UserMenuLB, Path=SelectedItem}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical" IsItemsHost="True"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate >
                        <DataTemplate >
                            <StackPanel Width="400" Height="100" > 
                                <TextBlock  Text="{Binding Goods.Title}"/>
                                <Image Source="{Binding Goods.Image}" Width="100"/>
                               
                                <TextBlock  Text="{Binding Goods.Category.Title}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </TabItem>
            <TabItem  Header="выполненные">
                <ListBox  ScrollViewer.VerticalScrollBarVisibility="Visible" ItemsSource="{Binding CrossListDontActive}" SelectedItem="{Binding CrossDontActive}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseDoubleClick">
                            <i:InvokeCommandAction Command="{Binding DoubleClickCommand}"
             CommandParameter="{Binding ElementName=UserMenuLB, Path=SelectedItem}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical" IsItemsHost="True"/>
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBox.ItemTemplate >
                        <DataTemplate >
                            <StackPanel Width="200" >
                                <Image Source="{Binding Goods.Image}" Width="100"/>
                                <TextBlock  Text="{Binding Goods.Title}"/>
                                <TextBlock  Text="{Binding Goods.Category.Title}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
