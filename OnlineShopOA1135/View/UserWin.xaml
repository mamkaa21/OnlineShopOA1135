<Window x:Class="OnlineShopOA1135.View.UserWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OnlineShopOA1135.View"
        mc:Ignorable="d"
        Title="UserWin" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
           
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="logo" FontSize="35"/>
        <Button Grid.Column="1" Content="home" Command="{Binding MenuWinOpen}" Background="White"/>

        <Label Content="Имя"  Grid.Row="1" FontSize="20" HorizontalAlignment="Right"/>
        <TextBox Text="{Binding User.Name}" Grid.Column="1" Grid.Row="1" BorderBrush="Black"/>

        <Label Content="Почта" Grid.Row="2" FontSize="20" HorizontalAlignment="Right"/>
        <TextBox Text="{Binding User.Email}" Grid.Column="1" Grid.Row="2" BorderBrush="Black"/>

        <ListBox Grid.Column="3" Grid.Row="1">
            <ListBox.ItemTemplate >
                <DataTemplate >
                    <StackPanel Width="200">
                        <TextBlock  Text="{Binding Title}"/>
                        <Image Source="{Binding Image}" Width="200"/>
                        <TextBlock Text="{Binding Description}"/>
                        <TextBlock  Text="{Binding Category.Title}"/>
                        <TextBlock Text="{Binding Rating}"/>

                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
